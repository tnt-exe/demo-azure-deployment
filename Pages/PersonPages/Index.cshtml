@page "/person"
@model demo_azure_deployment.Pages.PersonPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create</a>
</p>

@if (Model.Person.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Text)
            </th>
            <th>Created Date</th>
            <th>At Time</th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model.Person)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @item.CreatedTime.ToShortDateString()
                    </td>
                    <td>
                        @item.CreatedTime.ToShortTimeString()
                    </td>
                </tr>
            }
        </tbody>
</table>
}
else
{
    <h4>Currently there is no data, either can't connect to database or...</h4>
}
